{
    "name": "trip-advisor-backend",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/server.js",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "auth:generate": "npx @better-auth/cli generate",
        "auth:migrate": "npx @better-auth/cli migrate",
        "drizzle:generate": "drizzle-kit generate",
        "drizzle:push": "drizzle-kit push"
    },
    "dependencies": {
        "@hono/node-server": "^1.10.2",
        "better-auth": "^1.4.0",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.45.1",
        "hono": "^4.6.7",
        "pg": "^8.13.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^20.19.30",
        "@types/pg": "^8.16.0",
        "drizzle-kit": "^0.31.8",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3"
    },
    "drizzle-kit": {
        "out": "./drizzle",
        "schema": [
            "./src/db/schema.ts",
            "./src/db/auth-schema.ts"
        ],
        "dialect": "postgresql",
        "dbCredentials": {
            "url": "${DATABASE_URL}"
        }
    },
    "description": "",
    "main": "index.js",
    "keywords": [],
    "author": "",
    "license": "ISC"
}